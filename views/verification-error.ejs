<!-- views/verification-error.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verification Error</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            text-align: center;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            overflow: hidden;
            background-color: rgba(20, 22, 26, 0.9);
            color: #fff;
        }

        .container {
            position: relative;
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.05);
            padding: 30px;
            text-align: center;
            animation: fadeIn 0.8s ease-in-out, shakeAnimation 0.5s ease-in-out 3;
            max-width: 400px;
            width: 100%;
            transform-style: preserve-3d;
            backdrop-filter: blur(10px);
        }

        h1 {
            color: #ff0000;
            /* Red */
            font-size: 2em;
            margin-top: 20px;
        }

        p {
            color: #333;
            font-size: 1.2em;
        }

        .error-message {
            font-size: 1.5em;
            font-weight: bold;
            color: #ff0000;
            /* Red */
            text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
        }

        .huru-message {
            font-size: 1.2em;
            color: #e44d26;
            /* Orange */
            text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
        }

        @keyframes shakeAnimation {

            0%,
            100% {
                transform: translateX(0);
            }

            25%,
            75% {
                transform: translateX(-5px);
            }

            50% {
                transform: translateX(5px);
            }
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Verification Error!</h1>
        <p class="error-message">
            <%= errorMessage %>
        </p>
        <p class="huru-message">Welcome to <span class="verification-success">HURU</span> Chat!</p>
    </div>
</body>

</html>